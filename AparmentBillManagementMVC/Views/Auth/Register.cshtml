@model Manager

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome-4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/login-auth.css" />
</head>

<body>

    <header>
        <div class="p-3 d-flex justify-content-between">
            <a href="/" class=" d-flex">
                <img src="/img/logo.png" />
                <p>ABMS</p>
            </a>
            <div class="">
                <a asp-action="Index" class="btn btn-outline-primary">Login</a>
                <a asp-action="Register" class="btn btn-primary">Sign Up</a>
            </div>
        </div>
    </header>

    <div class="container">

@if(ViewBag.Error != null)
{
    <div class="alert alert-danger">
        @ViewBag.Error
    </div>
}

<div class="container">
    <form method="Post" asp-controller="Auth" class="d-flex flex-wrap flex-sm-wrap flex-md-nowrap flex-lg-nowrap  align-items-center" >
        <div class="m-3 " >
      
        <h5>Apartment Complex Form</h5>
        <form-group>

            <div>
                <label asp-for="ApartmentComplex.Name"></label>
                    <input asp-for="ApartmentComplex.Name" placeholder="ex. Harmony Heaven" />
            </div>
            <span asp-validation-for="ApartmentComplex.Name" class="text-danger"></span>
        </form-group>
        <form-group>
            <div>
                <label asp-for="ApartmentComplex.Address"></label>
                    <input asp-for="ApartmentComplex.Address" placeholder="ex. 123 Maple Street, Cityville" />
            </div>
            <span asp-validation-for="ApartmentComplex.Address" class="text-danger"></span>
        </form-group>
        <form-group>
            <div>
                <label asp-for="ApartmentComplex.PhoneNumber"></label>
                    <input asp-for="ApartmentComplex.PhoneNumber" placeholder="ex. (555) 123-4567" />
            </div>
            <span asp-validation-for="ApartmentComplex.PhoneNumber" class="text-danger"></span>
        </form-group>

        <div style="border-top:dashed 1px red; border-bottom:dashed 1px red;">
            Only managers can register. Tenants should be registered by managers. Contact with your manager to get your account.
        </div>


</div>
<div class="vr d-none d-sm-none d-md-inline"></div>
        <div class="m-3">

            <h5>Manager Form</h5>
            <form-group>
                <div>
                    <label asp-for="Name"></label>
                    <input asp-for="Name" placeholder="ex. Muhammed Enes" />
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </form-group>
            <form-group>
                <div>
                    <label asp-for="LastName"></label>
                    <input asp-for="LastName" placeholder="ex. Biçen" />
                </div>
                <span asp-validation-for="LastName" class="text-danger"></span>
            </form-group>
            <form-group>
                <div>
                    <label asp-for="Mail"></label>
                    <input asp-for="Mail" placeholder="ex. muhammedenesbicen49@gmail.com" />
                </div>
                <span asp-validation-for="Mail" class="text-danger"></span>
            </form-group>
            <form-group>
                <div>
                    <label asp-for="Password"></label>
                    <input asp-for="Password" placeholder="Abms49" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </form-group>
            <form-group>
                <div>
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" placeholder="ex. (555) 123-4567" />
                </div>
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </form-group>
            <form-group>
                <div>
                    <label asp-for="IdentityNumber"></label>
                    <input asp-for="IdentityNumber" placeholder="XYA-789-23Z" />
                </div>
                <span asp-validation-for="IdentityNumber" class="text-danger"></span>
            </form-group>


            <input type="submit" value="Register" asp-action="Register" />

</div></form>
</div>

    </div>
</body>



</html>

