@model List<TenantVM>
@foreach (TenantVM item in Model)
{
    <div class="card my-3 mx-3 col-3 col-md-6 col-lg-4 col-sm-12 apartmentCard" style="width: 18rem;">
        <div class="card-body d-flex flex-column justify-content-between">
            <div>
                <div class="d-flex justify-content-between">
                <h2 class="card-title">@item.Tenant.Name @item.Tenant.LastName </h2>
                    <h2 style="color:blueviolet;"> @item.BlockName@item.FlatNumber</h2>
                </div>
                <h6 class="card-subtitle mb-2 text-muted">@item.Tenant.PhoneNumber</h6>
                <p>Mail: @item.Tenant.Mail</p>
                <p>License Plate: @item.Tenant.LicensePlate</p>
                @if (item.DebtAmount > 0)
                {
                    <p>Debt:  <big class="card-text text-danger">@string.Format("{0:C}",item.DebtAmount)</big></p>
                }
                else if (item.DebtAmount == 0)
                {
                    <p>Debt:  <big class="card-text text-success">@string.Format("{0:C}",item.DebtAmount)</big></p>
                }
            </div>
            <div>
                <a class="btn btn-danger mb-3 w-100" asp-controller="Tenant" asp-action="Delete" asp-route-id="@item.Tenant.Id">
                    <i class="fa fa-trash"></i>  Delete Tenant
                </a>
                <a class="btn btn-warning text-white w-100" asp-controller="Tenant" asp-action="Update" asp-route-id="@item.Tenant.Id">
                    <i class="fa fa-pencil"></i>  Update Tenant
                </a>
            </div>
        </div>
    </div>
}