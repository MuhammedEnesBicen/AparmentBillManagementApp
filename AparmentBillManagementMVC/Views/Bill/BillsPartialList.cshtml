@model List<Entity.Bill>


@if (Model is not null)
{
<div class="table-responsive">
    <table class="table  table-hover table-light table-striped ">
        <tr>
            <th>Apartment</th>

            <th>Explanation</th>
            <th>Date</th>
            <th>Cost</th>
            <th>Is Payed</th>
            <th>Actions</th>
        </tr>



    @foreach (Entity.Bill item in Model)
    {
                string style = item.IsPayed ? "fa-check-circle text-success" : "fa-times-circle text-danger";
        <tr class="">
            <td>@item.Apartment?.BlockName - @item.Apartment?.Number</td>
            <td>@item.Explanation</td>
            <td>@item.BillDate.ToString("d")</td>
            <td>@item.BillCost</td>
            <td><i class="fa fa-2x   @style"></i></td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-info text-white"><i class="fa fa-pencil"></i> Update</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i> Delete</a>

            </td>
        </tr>
    }
        </table>
</div>
}


@if (Model is null || Model.Count == 0)
{
    <div id="noBillAlert" class="alert alert-info">No Bills</div>
}

