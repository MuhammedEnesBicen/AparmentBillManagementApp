@model List<Bill>

    @if(Model is not null){



<table class="table  table-striped">
    <tr class="bg-light">
        <th>Explanation</th>
        <th>BillDate</th>
        <th>BillCost</th>
        <th>Is Payed</th>
        @* <th>Actions</th> *@
    </tr>

    @foreach (Bill item in Model)
    {
        string style = item.IsPayed ? "table-success " : "table-danger";
        <tr class="@style">

            <td>@item.Explanation</td>
            <td>@item.BillDate.ToString("Y")</td>
            <td>@item.BillCost</td>
            <td>@item.IsPayed</td>

