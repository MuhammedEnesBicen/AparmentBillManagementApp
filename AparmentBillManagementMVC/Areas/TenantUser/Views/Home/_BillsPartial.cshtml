@model List<Bill>

    @if(Model is not null){

<h2 class="d-flex justify-content-center">Bills List</h2>
<table class="table  table-striped">
    <tr class="">
        <th>Explanation</th>
        <th>BillDate</th>
        <th>BillCost</th>
        <th>Is Payed</th>
        <th>Actions</th>
    </tr>

    @foreach (Bill item in Model)
    {
        string style = item.IsPayed ? "table-success " : "table-danger";
        <tr class="@style">

            <td>@item.Explanation</td>
            <td>@item.BillDate.ToString()</td>
            <td>@item.BillCost</td>
            <td>@item.IsPayed</td>

                <td class="text-center">
                    @if (!item.IsPayed)
                    {
                        <a asp-action="PayBill" asp-route-id="@item.Id" class="btn btn-info text-white">
                            <i class="fa fa-pencil"></i>
                            Pay Bill
                        </a>
                    }
                    else
                    {
                        <i class="fa fa-check text-success "></i>
                    }
                    </td>
                

        </tr>
    }

</table>

    }